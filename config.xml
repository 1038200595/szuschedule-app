<?xml version='1.0' encoding='utf-8'?>
<widget id="com.iszucn.szuschedule" version="0.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>深大课表</name>
    <description>
        深大课表 - 深大人的课表助手
    </description>
    <author email="jason@iszu.cn" href="http://blog.ijason.cc">
        Jason
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon36.png" density="ldpi" />
        <icon src="res/android/icon48.png" density="mdpi" />
        <icon src="res/android/icon72.png" density="hdpi" />
        <icon src="res/android/icon96.png" density="xhdpi" />
        <icon src="res/android/icon144.png" density="xxhdpi" />
        <icon src="res/android/icon192.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
