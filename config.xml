<?xml version='1.0' encoding='utf-8'?>
<widget id="com.iszucn.szuschedule" version="0.2.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>深大课表</name>
    <description>
        深大课表 - 深大人的课表助手
    </description>
    <author email="jason@iszu.cn" href="http://blog.ijason.cc">
        Jason
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon36.png" density="ldpi" />
        <icon src="res/android/icon48.png" density="mdpi" />
        <icon src="res/android/icon72.png" density="hdpi" />
        <icon src="res/android/icon96.png" density="xhdpi" />
        <icon src="res/android/icon144.png" density="xxhdpi" />
        <icon src="res/android/icon192.png" density="xxxhdpi" />
        <splash src="res/screen/ios/DefaultiPhonePortraitiOS56_320x480pt.png" width="320" height="480"/>
        <splash src="res/screen/ios/DefaultiPhonePortraitiOS56_320x480pt@2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/DefaultiPadPortraitiOS56_768x1024pt.png" width="768" height="1024"/>
        <splash src="res/screen/ios/DefaultiPadPortraitiOS789_768x1024pt@2x.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/DefaultiPadPortraitiOS789_768x1024pt.png" width="1024" height="768"/>
        <splash src="res/screen/ios/DefaultiPadPortraitiOS56_768x1024pt@2x.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/DefaultiPhonePortraitiOS56_320x568pt@2x.png" width="640" height="1136"/>
        <splash src="res/screen/ios/DefaultiPhonePortraitiOS89_375x667pt@2x.png" width="750" height="1334"/>
        <splash src="res/screen/ios/DefaultiPhonePortraitiOS89_414x736pt@3x.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/DefaultiPhonePortraitiOS89_414x736pt@3x.png" width="2208" height="1242"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
